@using eMovietickets.Data.ViewModels; 
@model RegisterVM;

@{ 
    ViewData["Title"] = "Sign up for a new account";
}

<br />
<div class="row">
    <div class="col-md-6 offset-3 border border-dark p-3 rounded-top" style="background-color:wheat; box-shadow: 0px 0px 20px #ccc;">
        
        <p>
            <h4 class="text-center mb-3 text-info" style="font-weight:bold">Sign up for a new account</h4>
        </p>

        <br />
        @if(TempData["Error"] != null)
            {
                <div class="col-md-12 alert alert-danger">
                    <span><b>Sorry!</b> - @TempData["Error"] </span>
                </div>
            }

        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Register">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="FullName" class="control-label" style="color:black">Full Name</label>
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EmailAddress" class="control-label" style="color:black">Email Address</label>
                        <input asp-for="EmailAddress" class="form-control" />
                        <span asp-validation-for="EmailAddress" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label" style="color:black">Password</label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword" class="control-label" style="color:black">Confirm Password</label>
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="input_field checkbox_option">
                        <input type="checkbox" id="cb1">
                        <label for="cb1" style="color:black">I agree with terms and conditions</label>
                    </div>

                    <div class="form-group">
                        <input class="btn btn-success float-right" type="submit" value="Sign up" />
                        <a class="btn btn-secondary" asp-controller="Movies" asp-action="Index">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>